# Development Dockerfile for React frontend with hot-reload

FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install ALL dependencies (including devDependencies)
RUN npm install

# Copy source code
COPY . .

# Expose Vite dev server port
EXPOSE 3081

# Start development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
